<!--
737-400 Clock and ETA to next Waypoint Chronometer 
-->

<PropertyList>
 <path>clock.ac</path>

  <animation>
    <type>material</type>
    <object-name>Chronoface.001</object-name>
    <emission>
      <red>   0.6 </red>
      <green> 0.6 </green>
      <blue>  0.6 </blue>
    </emission>
  <condition>
    <property>systems/electrical/on</property>
  </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>ET.01</object-name>
    <object-name>ET.10</object-name>
    <object-name>ET.01</object-name>
    <object-name>ET.10</object-name>
    <object-name>Hr.01</object-name>
    <object-name>Hr.10</object-name>
    <object-name>Mn.01</object-name>
    <object-name>Mn.10</object-name>
    <object-name>colon</object-name>
    <object-name>colon.002</object-name>
  <condition>
    <property>systems/electrical/on</property>
  </condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>ET.01</object-name>
    <object-name>ET.10</object-name>
    <object-name>ET01</object-name>
    <object-name>ET10</object-name>
    <object-name>Hr.01</object-name>
    <object-name>Hr.10</object-name>
    <object-name>Mn.01</object-name>
    <object-name>Mn.10</object-name>
    <object-name>colon</object-name>
    <object-name>colon.002</object-name>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  <condition>
    <property>systems/electrical/on</property>
  </condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Chronoface.001</object-name>
    <emission>
      <red>   .7 </red>
      <green> .7 </green>
      <blue>  .7 </blue>
    </emission>
  <condition>
    <property>systems/electrical/on</property>
  </condition>
  </animation>
 
 
 <animation>
   <type>textranslate</type>
   <object-name>Hr.10</object-name>
   <property>/instrumentation/clock/indicated-hour</property>
   <factor>0.01</factor>
   <step>10</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

 <animation>
   <type>textranslate</type>
   <object-name>Hr.01</object-name>
   <property>/instrumentation/clock/indicated-hour</property>
   <factor>0.1</factor>
   <step>1</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>
 
  <animation>
   <type>textranslate</type>
   <object-name>Mn.10</object-name>
   <property>/instrumentation/clock/indicated-min</property>
   <factor>0.01</factor>
   <step>10</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

 <animation>
   <type>textranslate</type>
   <object-name>Mn.01</object-name>
   <property>/instrumentation/clock/indicated-min</property>
   <factor>0.1</factor>
   <step>1</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

 <animation>
   <type>textranslate</type>
   <object-name>ET10</object-name>
   <value>0</value>
   <factor>0.01</factor>
   <step>10</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

 <animation>
   <type>textranslate</type>
   <object-name>ET01</object-name>
   <property>/autopilot/internal/eta-wp-hr</property>
   <factor>0.1</factor>
   <step>1</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

 <animation>
   <type>textranslate</type>
   <object-name>ET.10</object-name>
     <property>/autopilot/internal/eta-wp-min</property>
   <factor>0.01</factor>
   <step>10</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

 <animation>
   <type>textranslate</type>
   <object-name>ET.01</object-name>
 		<property>/autopilot/internal/eta-wp-min</property>    
    <factor>0.1</factor>
   <step>1</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

 <animation>
  <type>select</type>
  <object-name>ET10</object-name>
   <condition>
    <greater-than>
     <property>/velocities/groundspeed-kt</property>
     <value>1</value>
    </greater-than>
   </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>ET01</object-name>
   <condition>
    <greater-than>
     <property>/velocities/groundspeed-kt</property>
     <value>1</value>
    </greater-than>
   </condition>
 </animation>

  <animation>
  <type>select</type>
  <object-name>ET.10</object-name>
   <condition>
    <greater-than>
     <property>/velocities/groundspeed-kt</property>
     <value>1</value>
    </greater-than>
   </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>ET.01</object-name>
   <condition>
    <greater-than>
     <property>/velocities/groundspeed-kt</property>
     <value>1</value>
    </greater-than>
   </condition>
 </animation>

</PropertyList>
