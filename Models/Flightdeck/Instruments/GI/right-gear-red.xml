<?xml version="1.0"?>
<PropertyList>

  <path>right-gear-red.ac</path>

  <animation>
    <type>material</type>
    <object-name>button</object-name>
    <ambient>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </ambient>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
    <condition>
      <and>
	<greater-than>
	  <property>/fdm/jsbsim/gear/gear-pos-norm</property>
	  <value>0</value>
	</greater-than>
	<less-than>
	  <property>/fdm/jsbsim/gear/gear-pos-norm</property>
	  <value>1</value>
	</less-than>
      </and>
    </condition>
  </animation>

</PropertyList>
