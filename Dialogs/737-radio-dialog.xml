<hrule/>

<group>
  <layout>hbox</layout>
  <default-padding>6</default-padding>
  <empty>
    <stretch>true</stretch>
  </empty>

  <button>
    <legend>OK</legend>
    <default>true</default>
    <equal>true</equal>
    <binding>
      <command>dialog-apply</command>
    </binding>
    <binding>
      <command>nasal</command>
      <script>dialogs.radio.toggle()</script>
    </binding>
  </button>

  <button>
    <legend>Apply</legend>
    <equal>true</equal>
    <binding>
      <command>dialog-apply</command>
    </binding>
  </button>

  <button>
    <legend>Reset</legend>
    <equal>true</equal>
    <binding>
      <command>dialog-update</command>
    </binding>
  </button>

  <button>
    <legend>Cancel</legend>
    <equal>true</equal>
    <key>Esc</key>
    <binding>
      <command>nasal</command>
      <script>dialogs.radio.toggle()</script>
    </binding>
  </button>

  <empty>
    <stretch>true</stretch>
  </empty>
</group>


